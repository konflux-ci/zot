{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["github>konflux-ci/mintmaker//config/renovate/renovate.json"],
    "git-submodules": {
      "enabled": true,
      "versioning": "semver"
    },
    "packageRules": [
      {
        "description": "Disable digest updates for zot submodule (keep patch/minor/major via tags)",
        "matchDepNames": ["zot"],
        "matchUpdateTypes": ["digest"],
        "enabled": false
      }
    ]
  }
